<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/activity_login_title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_launcher"
            android:minHeight="72dp"
            android:minWidth="86dp" />

        <LinearLayout
            android:id="@+id/act_login_textview_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/act_login_account_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="UserName"
                android:inputType="text"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/act_login_psw_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/act_login_psw_again_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textSize="18sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/act_register_mail_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 底部按钮区 -->
        <LinearLayout
            android:id="@+id/act_login_bottom_btn_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical" >

            <!-- 登录按钮 -->

            <Button
                android:id="@+id/act_login_loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Login" />

            <LinearLayout
                android:id="@+id/act_login_button_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/act_login_registerBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Register" />

                <Button
                    android:id="@+id/act_login_forgetPswBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Forget" />
            </LinearLayout>

            <!-- 第三方登录 -->

            <LinearLayout
                android:id="@+id/act_login_third_login_Button_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible" >

                <Button
                    android:id="@+id/act_third_login_sinaWeiboBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sina" />

                <Button
                    android:id="@+id/act_third_login_tecentWeiboBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TWeibo" />

                <Button
                    android:id="@+id/act_third_login_qqBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="QQ" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>