<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/toast_view_light_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.turbo.volley.toolbox.NetworkImageView
            android:id="@+id/main_item_pic_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_launcher"
            android:maxHeight="96dp"
            android:maxWidth="96dp"
            android:minHeight="72dp"
            android:minWidth="72dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/main_item_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点子记录等的标题"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main_item_introduce_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="点子的介绍信息"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/main_item_author_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:text="\@作者:"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 底部按钮 -->

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/main_item_loveBtn_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/main_item_loveBtn_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:drawable/arrow_up_float" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_item_hateBtn_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/main_item_hateBtn_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:drawable/arrow_down_float" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>